<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:MobileVersion.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="MobileVersion.Views.MainView"
			 x:DataType="vm:MainViewModel">
	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
		to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:MainViewModel />
	</Design.DataContext>
	<Grid>

		<!-- MAIN CONTENT -->
		<Grid Name="MainContent">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!-- TOP BAR -->
			<Grid Grid.Row="0" Margin="10" ColumnDefinitions="Auto,*,Auto">
				<!-- Side menu -->
				<Button Content="☰" FontSize="24" Width="40" Height="40" Click="OpenMenu"/>

				<!-- SEARCH -->
				<StackPanel Grid.Column="1"	Orientation="Horizontal" HorizontalAlignment="Center">
					<TextBlock Text="🔍" FontSize="18" Margin="0,0,5,0"/>
					<TextBox Width="180" Watermark="Search"/>
				</StackPanel>
			</Grid>

			<!-- SCROLLABLE CONTENT -->
			<ScrollViewer Grid.Row="1">
				<ItemsControl ItemsSource="{Binding FilteredPosts}" Margin="15">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Border Margin="0,0,0,15" Padding="10" Background="#F0F0F0" CornerRadius="12">
								<StackPanel Spacing="8">
									<TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
									<Border Height="150" Background="#DDD" CornerRadius="10"/>
								</StackPanel>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>

		</Grid>

		<!-- SIDE MENU (OVERLAY) -->
		<Border x:Name="SideMenu" Background="gray" Width="300" HorizontalAlignment="Left" IsVisible="False" ZIndex="10" ClipToBounds="true">
			<StackPanel Margin="15"	Spacing="15">
				<!-- CLOSE BUTTON -->
				<Button Content="✖" HorizontalAlignment="Right" Click="CloseMenu"/>

				<!-- MENU ITEMS -->
				<Grid ColumnDefinitions="Auto,10,Auto" Margin="10">

					<TextBlock Text="↕ Sort by:"
							   VerticalAlignment="Center"
							   Foreground="White"/>

					<ComboBox Grid.Column="2"
							  HorizontalAlignment="Stretch"
							  ItemsSource="{Binding SortBy}"
							  SelectedItem="{Binding }"/>
				</Grid>
				<Grid ColumnDefinitions="Auto,10,Auto" Margin="10">

					<TextBlock Text="📁 Categories:"
							   VerticalAlignment="Center"
							   Foreground="White"/>

					<ComboBox Grid.Column="2"
							  HorizontalAlignment="Left"
							  ItemsSource="{Binding Categories}"
							  SelectedItem="{Binding SelectedCategory}"/>
				</Grid>



				<!-- SLIDER -->
				<TextBlock Text="☀ Dark / Light mode strength" Foreground="White" Margin="0,20,0,5"/>
				<Slider Minimum="0" Maximum="100"/>

				<!-- ABOUT -->
				<Button Content="ℹ About Us" Margin="0,30,0,0" Classes="MenuButton" Foreground="White"/>
				<Button Content="⚙ Settings" Classes="MenuButton" Foreground="White"/>
			</StackPanel>
		</Border>
	</Grid>

</UserControl>